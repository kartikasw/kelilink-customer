<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_component_more"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ic_iv_category"
        android:layout_width="@dimen/image_view_category"
        android:layout_height="@dimen/image_view_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <TextView
        android:id="@+id/ic_tv_name"
        style="@style/TextAppearance.Kelilink.Subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_component_small"
        app:layout_constraintEnd_toEndOf="@+id/ic_iv_category"
        app:layout_constraintStart_toStartOf="@+id/ic_iv_category"
        app:layout_constraintTop_toBottomOf="@+id/ic_iv_category" />


</androidx.constraintlayout.widget.ConstraintLayout>