<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button -->
    <style name="Widget.Kelilink.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textAppearance">@style/TextAppearance.Kelilink.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Widget.Kelilink.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Kelilink.Button</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>

</resources>